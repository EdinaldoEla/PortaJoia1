@model TrabalheConosco

@{
    ViewData["Title"] = "Cadastro de colaboradores para trabalhar no Porta Jóia";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-xl-4 col-md-4">
            <img src="~/imagens/logo_porta_joia.png" class="img-fluid-mb-4">
            <section id="descricao">
                <h6 class="text-justify">
                    Somos uma empresa no ramo da beleza. Neste contexto buscamos oferecer aos nossos clientes produtos e
                    serviços de qualidade objetivando elevar sua alta estima e melhor qualidade de vida.
                </h6>
            </section>
        </div>
        <div class="col-lg-8 col-sm-6 col-md-4">
            <h3 class="row justify-content-md-center" id="h2-1">Trabalhe Conosco. Preencha o fomulário e nos envie.</h3>
            
            <form method="POST" asp-controller="TrabalheConosco" asp-action="Inserir">
               <fieldset>
                    <div class="form-group">
                        <label asp-for="Nome">Nome:</label>
                        <input asp-for="Nome" type="text" id="Nome" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label asp-for="DataNascimento">DataNascimento:</label>
                        <input asp-for="DataNascimento" type="date" id="DataNascimento" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label asp-for="Telefone">Telefone:</label>
                        <input asp-for="Telefone" type="text" id="Telefone" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label aps-for="Email">Email:</label>
                        <input id="Email" asp-for="Email" type="email" id="Email" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label asp-for="Experiencia">Experiência:</label>
                        <input asp-for="Experiencia" type="text" id="Experiencia" class="form-control" required>
                    </div>
                    <span>Entraremos em contato posteriormente.</span>
                </fieldset>
                <input type="submit" class="btn btn-primary float-right" value="Enviar">
            </form>

        </div>
    </div>
    
</div>
