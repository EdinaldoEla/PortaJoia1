@model Produto

@{
    ViewData["Title"] = "Cadastro de Produtos";
}

<!--<p class="text-danger">@ViewData["mensagem"]</p>-->

<h2 class="row justify-content-md-center" id="h2-1">Cadastro de Produto</h2>
<div class="row justify-content-md-center">
    <form method="POST" asp-controller="Produto" asp-action="Inserir" class="col-md-4"
        onsubmit="return mensagem(this);" name="formulario">
        <fieldset>
            <div class="form-group">
                <label asp-for="NomeProduto">Produto</label>
                <!--<input asp-for="NomeProduto" class="form-control" required/>-->
                <input id="NomeProduto" asp-for="NomeProduto" class="form-control" required/>
            </div>
            <div class="form-group">
                <label asp-for="Unidade">Unidade</label>
                <input asp-for="Unidade" class="form-control" required/>
            </div>
            <div class="form-group">
                <label asp-for="Quantidade">Quantidade</label>
                <input asp-for="Quantidade" class="form-control" required/>
            </div>
            <div class="form-group">
                <label asp-for="PrecoProduto">Pre√ßo</label>
                <input asp-for="PrecoProduto" class="form-control" required />
            </div>
        </fieldset>

        <input type="submit" value="Cadastrar" class="btn btn-primary" />
        
    </form>
</div>
