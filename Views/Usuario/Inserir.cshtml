@model Usuario

@{
    ViewData["Title"] = "Cadastro de Usu√°rios";
}

<h2 class="row justify-content-md-center" id="h2-1">Cadastro de Usuario</h2>
<div class="row justify-content-md-center">
    <form method="POST" asp-controller="Usuario" asp-action="Inserir" class="col-md-4" onsubmit="return mensagem(this);"
        name="formulario">
        <fieldset>
            <div class="form-group">
                <label asp-for="Nome">Nome</label>
                <input asp-for="Nome" class="form-control" required />
            </div>
            <div class="form-group">
                <label asp-for="Login">Login</label>
                <input asp-for="Login" class="form-control" required />
            </div>

            <div class="form-group">
                <label asp-for="Senha">Senha</label>
                <input asp-for="Senha" class="form-control" required />
            </div>
        </fieldset>
        <input type="submit" value="Cadastrar" class="btn btn-primary" />
    </form>
</div>
