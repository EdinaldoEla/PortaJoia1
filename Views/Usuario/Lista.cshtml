@model List<Usuario>

@{
    ViewData["Title"] = "Listagem de Usuários Cadastrados";
}

<h2 class="row justify-content-md-center" id="h2-1">Usuários Cadastrados</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>CÓDIGO</th>
            <th>NOME</th>
            <th>LOGIN</th>
            <th>OPERAÇÕES</th>
        </tr>
    </thead>
    <tbody>

        @foreach (Usuario u in Model)
        {
            <tr>
                <td>@u.Id</td>
                <td>@u.Nome</td>
                <td>@u.Login</td>

                <td>
                    <a href="/Usuario/Alterar?Id=@u.Id">Alterar</a>

                    <a href="/Usuario/Excluir?Id=@u.Id">Excluir</a>
                </td>
             </tr>
        }
    </tbody>
</table>

<br>
